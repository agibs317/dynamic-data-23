<div class="section-divider" id="about"></div>
<h1 class="primary-color-light delaGothicOne">{{data.title}}</h1>
<p>{{data.description}}</p>


{{#if data.products}}
<div class="section-divider" id="packages"></div>
<h2>Featured Products</h2>
<div class="owl-theme owl-carousel owl-packages">
{{#each data.products}}
  <div class="card">
    {{#if this.image}}
  <img src="{{this.image}}" class="card-img-top" alt="...">
  {{/if}}
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">{{this.text}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">${{this.price}}</li>
  </ul>
</div>
{{/each}}
</div>
{{/if}}


{{#if data.gallery}}
<div class="section-divider" id="gallery"></div>
<h2>Categories</h2>
<div class="row">
  {{#each data.gallery}}
  <div class="col-3">
    <a class="gallery-img" data-bs-toggle="modal" data-bs-target="#gallery{{@index}}">
  <img src="{{this.url}}" alt="{{this.title}}" class="img-thumbnail">
</a>
  </div>
  {{/each}}
</div>

{{/if}}

<footer class="primary-color-bg secondary-color-light">
  Copyright 2023 - Andaiye Gibson
</footer>