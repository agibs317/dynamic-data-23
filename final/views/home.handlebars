<div class="section-divider" id="about"></div>
<h1 class="primary-color-light playfair">{{data.store}}</h1>

{{#if data.slideshow}}
<div class="owl-slideshow owl-carousel owl-theme">
    {{#each data.slideshow}}
  <div class="item"> <img class= "img-fluid" src="{{this}}" alt=""> </div>
  {{/each}}
</div>
{{/if}}

{{#if data.featured}}
<div class="section-divider" id="packages"></div>
<h2>Featured Products</h2>
<div class="owl-theme owl-carousel owl-packages">
{{#each data.featured}}
  <div class="card">
    {{#if this.image}}
    <a href="/product/{{this.id}}" class="gallery-img">
  <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
  </a>
  {{/if}}
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">{{this.text}}</p>
  </div>
</div>
{{/each}}
</div>
{{/if}}

<div class="section-divider" id="gallery"></div>
<h2>Categories</h2>
<div class="row">
{{#each data.category}}
  <div class="col-3">
    <a href="/category/{{this.name}}" class="gallery-img">
  <img src="{{this.image}}" alt="{{this.name}}" class="img-thumbnail">
</a>
<h5>{{this.name}}</h5>
  </div>
  {{/each}}
</div>

<footer class="primary-color-bg secondary-color-light">
  Copyright 2023 - Andaiye Gibson
</footer>